        {
          "name": "Get App Details - Candy Crush",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-api-key",
                "value": "{{apiKey}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/app/553834731",
              "host": ["{{baseUrl}}"],
              "path": ["app", "553834731"]
            }
          }
        },
